{
    "name": "Product API",
    "private": true,
    "description": "Product API for Fine+Rare",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://https://github.com/MihailSandulescu/product-api"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=18.0"
    },
    "scripts": {
        "compile": "tsc",
        "dev": "concurrently \"ts-node-dev --respawn --watch ./**/*.graphql ./src/index.ts\" \"npm run generate --watch\"",
        "start": "npm run compile && nodemon ./dist/index.js",
        "test": "jest",
        "generate": "graphql-codegen --watch \"src/schema.graphql\""
    },
    "dependencies": {
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/typescript-resolvers": "^4.0.6",
        "@graphql-tools/schema": "^10.0.3",
        "@parcel/watcher": "^2.4.0",
        "express": "^4.18.3",
        "express-graphql": "^0.12.0",
        "graphql": "^15.8.0",
        "mongoose": "^8.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.0.3",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.0",
        "ts-jest": "^29.0.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "src"
        ],
        "globals": {
            "ts-jest": {
                "testRegext": "/__tests__/.*.test.ts",
                "verbose": true
            }
        }
    }
}
